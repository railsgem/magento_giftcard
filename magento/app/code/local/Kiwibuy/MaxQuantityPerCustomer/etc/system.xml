<config>
    <tabs>
        <orderlimitconfig translate="label" module="kiwibuy_maxquantitypercustomer">
            <label>Max Quantiy Per Customer</label>
            <sort_order>1</sort_order>
        </orderlimitconfig>
    </tabs> 
    <sections>
        <orderlimit_options translate="label" module="kiwibuy_maxquantitypercustomer">
            <label>Config Options</label>
            <tab>orderlimitconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>  
            <groups>
                <messages translate="label">
                    <label>Max Quantiy Per Customer Config Fields</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                  
                    <fields>
                    <productquantity_enable translate="label comment">
                        <label>Enabled</label>
                        <comment>To Enable Max Quantity Amount Select Yes from dropdown.</comment>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>6</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </productquantity_enable>
                    <productquantity_limit_msg>
                        <label>Maximum Quantity Amount Message</label>
                        <comment><![CDATA[Message to be displayed to customer when "Maximum Quantity Amount " condition limit is triggered.]]></comment>  
                        <frontend_type>text</frontend_type>
                        <sort_order>7</sort_order>
                       <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </productquantity_limit_msg>    
                    </fields>                              
                </messages>
            </groups>    
        </orderlimit_options>
    </sections>   
</config>
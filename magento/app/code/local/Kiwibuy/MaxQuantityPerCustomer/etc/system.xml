<config>
    <tabs>
        <orderlimitconfig translate="label" module="maxquantitypercustomer">
            <label>Max Quantiy Per Customer</label>
            <sort_order>1</sort_order>
        </orderlimitconfig>
    </tabs> 
    <sections>
        <orderlimit_options translate="label" module="maxquantitypercustomer">
            <label>Config Options</label>
            <tab>orderlimitconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>  
            <groups>
                <messages translate="label">
                    <label>Max Quantiy Per Customer Config Fields</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                  
                    <fields>
                        <hello_message>
                            <label>Message</label>
                            <frontend_type>select</frontend_type>
                            <!-- adding a source model -->
                            <source_model>maxquantitypercustomer/words</source_model>  
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    
                        </hello_message>
                        <hello_time>
                            <label>Time to Say Hello</label>
                            <frontend_type>time</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    
                        </hello_time>     
                    </fields>                              
                </messages>
            </groups>          
            <groups>
                <example>
                    <label>Example of Adding a Group</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                    
                </example>
            </groups>        
        </orderlimit_options>
    </sections>   
</config>